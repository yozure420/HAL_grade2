<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">

    <nav class="mb-8 text-sm text-gray-500">
        <a href="/" class="hover:text-sky-600 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/products" class="hover:text-sky-600 transition-colors">Products</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium truncate"><%= product.name %></span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">

        <div class="space-y-4">
            <div class="aspect-square bg-white overflow-hidden shadow-sm relative group">
                <% if (product.status === 'new') { %>
                <span class="absolute top-4 left-4 bg-pink-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-md z-10">
                    NEW
                </span>
                <% } else if (product.status === 'coming_soon') { %>
                <span class="absolute top-4 left-4 bg-sky-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-md z-10">
                    COMING SOON
                </span>
                <% } %>

                <!-- TODO: 商品画像を表示: product.image -->
                <img src=""
                    alt=""
                    class="w-full h-full object-contain p-8 group-hover:scale-105 transition-transform duration-500">
            </div>

        </div>

        <div class="flex flex-col h-full">

            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4 tracking-tight">
                <!-- TODO: 商品名を表示: product.name -->
            </h1>

            <div class="mb-2">
                <span class="px-3 py-1 text-xs bg-gray-100 text-gray-700 font-medium px-2 py-1 rounded-full">
                    <!-- TODO: 商品カテゴリを表示: categories[product.category] -->
                </span>
            </div>

            <div class="flex items-baseline gap-4 mb-8">
                <!-- TODO: 商品価格を表示: product.price -->
                <span class="text-3xl font-bold text-slate-900">&yen;</span>
                <span class="text-sm text-gray-500 font-medium">(税込)</span>
            </div>

            <div class="prose prose-slate max-w-none text-gray-600 mb-8 border-b border-gray-100 pb-8">
                <p>
                    <!-- TODO: 商品説明を表示: product.description -->
                </p>
                <ul class="text-sm mt-4 list-disc list-inside text-gray-500">
                    <li>サイズ: フリー</li>
                    <li>素材: 詳細はパッケージに記載</li>
                    <li>発送予定: 3営業日以内</li>
                </ul>
            </div>

            <div class="space-y-6">

                <% if (product.status !== 'coming_soon') { %>
                <!-- coming_soon の場合は数量選択を非表示 -->
                <div class="flex items-center gap-4">
                    <label class="text-sm font-bold text-gray-700">数量</label>
                    <div class="flex items-center border border-gray-300 rounded-lg">
                        <button class="quantity-minus w-10 h-10 flex items-center justify-center text-gray-600 hover:bg-gray-100 rounded-l-lg transition">-</button>
                        <input type="text" name="quantity" value="1" class="w-12 h-10 text-center border-0 focus:ring-0 font-bold text-slate-900" readonly>
                        <button class="quantity-plus w-10 h-10 flex items-center justify-center text-gray-600 hover:bg-gray-100 rounded-r-lg transition">+</button>
                    </div>
                </div>
                <% } %>

                <div class="flex flex-col sm:flex-row gap-4">
                    <% if (product.status === 'coming_soon') { %>
                    <!-- coming_soon の場合はカートに入れない -->
                    <button disabled class="flex-1 bg-gray-300 text-white font-bold py-4 px-6 rounded-xl cursor-not-allowed flex items-center justify-center gap-2">
                        <span>販売開始までお待ちください</span>
                    </button>
                    <% } else { %>
                    <!-- TODO: action に /cart/add を設定 -->
                    <form action="" method="POST" class="flex-1 flex">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <input type="hidden" name="quantity" value="1" id="hidden-quantity">
                        <button type="submit" class="w-full flex-1 bg-sky-600 hover:bg-sky-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg hover:shadow-xl transition-all flex items-center justify-center gap-2 transform hover:-translate-y-0.5">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                            </svg>
                            <span>カートに入れる</span>
                        </button>
                    </form>
                    <% } %>

                    <button class="like-button flex-none bg-white text-gray-400 font-bold p-4 rounded-xl transition-all group" data-like-type="product" data-id="<%= product.id %>">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                    </button>
                </div>

                <div class="flex gap-4 pt-4 text-xs text-gray-500">
                    <div class="flex items-center gap-1">
                        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>在庫あり</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                        <span>公式グッズ</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

<script src="/js/cart.js"></script>