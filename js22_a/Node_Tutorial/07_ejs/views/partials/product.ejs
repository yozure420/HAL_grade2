<div
    class="group relative bg-white rounded-none shadow-sm hover:shadow-lg transition-all duration-200 cursor-pointer border border-transparent hover:border-slate-100">
    <!-- Image -->
    <div class="aspect-w-1 aspect-h-1 w-full h-[200px] overflow-hidden bg-white relative">
        <a href="/products/<%= product.id %>">
            <img src="<%= product.image %>" alt="<%= product.name %>"
                class="object-cover object-left group-hover:opacity-75 transition-opacity duration-300">

            <!-- Like Button -->
            <button class="like-button absolute top-2 right-2 p-2 rounded-full bg-white/80 hover:bg-white transition-colors z-10" data-like-type="product" data-id="<%= product.id %>">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
            </button>

            <% if (product.status==='new') { %>
            <div class="absolute top-0 left-0 bg-pink-500 text-white text-xs font-bold px-3 py-1">
                NEW
            </div>
            <% } else if (product.status==='coming_soon') { %>
            <div class="absolute top-0 left-0 bg-blue-500 text-white text-xs font-bold px-3 py-1">
                COMING SOON
            </div>
            <% } %>
        </a>
    </div>

    <!-- Content -->
    <a href="/products/<%= product.id %>">
        <div class="mt-4 px-4 pb-4">
            <h3 class="py-2 text-sm text-gray-700 line-clamp-2 group-hover:text-sky-600 transition-colors">
                <%= product.name %>
            </h3>
            <p class="text-xs text-gray-500">
                <span class="px-2 py-1 bg-gray-100 rounded-full"><%= categories[product.category] %></span>
            </p>
            <p class="mt-1 text-lg font-bold text-gray-900">
                &yen;<%= Number(product.price).toLocaleString() %>
                <span class="text-xs font-normal text-gray-500">(税込)</span>
            </p>
            <p class="mt-1 text-xs text-gray-500 line-clamp-1">
                <%= product.description %>
            </p>
        </div>
    </a>
</div>