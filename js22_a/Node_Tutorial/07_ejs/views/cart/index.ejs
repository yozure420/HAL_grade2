<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h1 class="flex items-center gap-2 text-3xl font-bold mb-8 text-slate-900">
        <img src="/svg/cart-btn.svg" alt="Cart Button" class="w-6 h-6">
        ショッピングカート
    </h1>

    <% if (cartItems.length === 0) { %>
    <div class="text-center py-20 bg-gray-50 rounded-2xl">
        <p class="text-gray-500 mb-6 font-medium">カートに商品がありません</p>
        <a href="/products" class="inline-block bg-sky-600 text-white font-bold py-3 px-8 rounded-full hover:bg-sky-700 transition">商品はコチラ</a>
    </div>
    <% } else { %>

    <%- include('../partials/carts', { cartItems, total }) %>

    <div class="mt-8 flex flex-col md:flex-row justify-between items-center bg-white p-8 rounded-2xl shadow-sm border border-gray-100 gap-8">
        <a href="/products" class="text-gray-500 hover:text-sky-600 font-medium flex items-center gap-2 transition">
            <img src="/svg/arrow-left.svg" alt="Arrow Left" class="w-6 h-6">
            買い物を続ける
        </a>

        <div class="flex flex-col items-end gap-6 w-full md:w-auto">
            <div class="flex items-baseline gap-8 text-xl">
                <span class="text-gray-500 font-medium">合計</span>
                <span class="text-3xl font-bold text-slate-900">&yen;<%= total.toLocaleString() %></span>
            </div>
            <a href="/cart/payment" class="w-full md:w-auto bg-sky-600 text-white font-bold py-4 px-12 rounded-xl shadow-lg hover:shadow-xl hover:bg-sky-700 transition transform hover:-translate-y-0.5 text-center">
                レジに進む
            </a>
        </div>
    </div>
    <% } %>
</div>